<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/topbarbg"
        android:orientation="horizontal" >

        <TableRow
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="3dip"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="btnBack" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back" />
        </TableRow>

        <TableRow
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" >
        </TableRow>

        <TableRow
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" >
        </TableRow>

        <TableRow
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="3dip"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="btnHome" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home" />
        </TableRow>
    </LinearLayout>

    <!-- Main Blog 1 zzz Rokhimin whd zzz -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_margin="4dip"
        android:layout_weight="9"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >


            <RelativeLayout
                android:id="@+id/linearLayout92"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:background="@drawable/rowbg"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout93"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView94"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/blog7" />


                    <TextView
                        android:id="@+id/textView95"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dip"
                        android:text="Teknologi wireless 802.11"
                        android:textColor="#ff8a00"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/linearLayout93"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView15"
                        android:src="@drawable/line"
                        android:layout_below="@+id/linearLayout93"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Standart jaringan wireless yang bekerja pada frekuensi 5 GHz dengan kecepatan transfer datanya mencapai 58 Mbps. Sementara 802.11b masih dalam pengembangan, IEEE membuat ekstensi kedua dari 802.11 yang disebut 802.11a."
                        android:id="@+id/textView48"
                        android:textColor="#000"
                        android:singleLine="false"
                        android:layout_below="@+id/imageView15"
                        android:layout_alignLeft="@+id/imageView15"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Karena 802.11b mendapatkan popularitas jauh lebih cepat dibanding 802.11a, sebagian orang percaya bahwa 802.11a diciptakan setelah 802.11b. Faktanya, 802.11a dibuat pada waktu yang sama. Karena biaya yang lebih tinggi, 802.11a biasanya ditemukan pada jaringan usaha yang lebih baik sedangkan 802.11b melayani pasar dalam negeri."
                        android:id="@+id/textView137"
                        android:textColor="#000"
                        android:singleLine="false"
                        android:layout_below="@+id/imageView15"
                        android:layout_alignLeft="@+id/imageView15"
                        android:layout_marginTop="5dip"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="802.11a mendukung bandwidth sampai 54 Mbps dan sinyal berada dalam spektrum frekuensi teratur sekitar 5 GHz. Frekuensi yang lebih tinggi dibandingkan dengan 802.11b yang berfrekuensi lebih pendek. Frekuensi yang lebih tinggi berarti juga sinyal 802.11a lebih sulit menembus dinding dan penghalang lainnya."
                        android:id="@+id/textView138"
                        android:textColor="#000"
                        android:singleLine="false"
                        android:layout_below="@+id/imageView15"
                        android:layout_alignLeft="@+id/imageView15"
                        android:layout_marginTop="5dip"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Karena 802.11a dan 802.11b menggunakan frekuensi yang berbeda, kedua teknologi tidak kompatibel satu sama lain. Beberapa vendor menawarkan hybrid 802.11a / b peralatan jaringan, tetapi produk ini hanya melaksanakan dua sisi standar samping (masing-masing perangkat yang terhubung harus menggunakan salah satu standar dalam pemakaiannya)."
                        android:id="@+id/textView139"
                        android:textColor="#000"
                        android:singleLine="false"
                        android:layout_below="@+id/imageView15"
                        android:layout_alignLeft="@+id/imageView15"
                        android:layout_marginTop="5dip"
                        />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@+id/editText2"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Written : IEEE"
                            android:id="@+id/textView52"
                            android:layout_above="@+id/imageView18"
                            android:layout_alignLeft="@+id/imageView18"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Update : 10/02/2017"
                            android:id="@+id/textView49"
                            android:layout_above="@+id/imageView18"
                            android:layout_alignLeft="@+id/imageView18"
                            android:layout_marginBottom="2dip"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView19"
                            android:src="@drawable/line"
                            android:layout_above="@+id/textView48"
                            android:layout_alignLeft="@+id/imageView15"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Commentar :"
                            android:id="@+id/textView51"
                            android:layout_above="@+id/editText2"
                            android:layout_alignLeft="@+id/imageView18"
                            android:textColor="#000"
                            android:layout_marginTop="14dip"
                            />
                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText2"
                            android:layout_alignParentBottom="true"
                            android:layout_alignLeft="@+id/linearLayout93"
                            />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kirim"
                            android:id="@+id/button2"
                            android:layout_above="@+id/progressBar3"
                            android:layout_alignLeft="@+id/editText2"
                            android:onClick="btnSend"
                            />
                        <ProgressBar
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/progressBar4"
                            android:layout_above="@+id/textView49"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="130dip"
                            android:layout_marginTop="30dip"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Load Commentar"
                            android:id="@+id/textView50"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="100dip"
                            android:layout_marginBottom="10dip"
                            />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>