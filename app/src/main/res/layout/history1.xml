<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/topbarbg"
        android:orientation="horizontal" >

        <TableRow
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="3dip"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="btnBack" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back" />
        </TableRow>

        <TableRow
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" >
        </TableRow>

        <TableRow
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" >
        </TableRow>

        <TableRow
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="3dip"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="btnHome" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home" />
        </TableRow>
    </LinearLayout>

    <!-- Main history 1 zzz Rokhimin whd zzz -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_margin="4dip"
        android:layout_weight="9"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >


            <RelativeLayout
                android:id="@+id/linearLayout92"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dip"
                android:background="@drawable/rowbg"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout93"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView94"
                        android:layout_width="106dp"
                        android:layout_height="121dp"
                        android:src="@drawable/logo_smk" />


                    <TextView
                        android:id="@+id/textView95"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dip"
                        android:text="Sejarah SMK Negeri 2 Surabaya "
                        android:textColor="#ff8a00"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/linearLayout93"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView15"
                        android:src="@drawable/line"
                        android:layout_below="@+id/linearLayout93"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Sekolah Menengah Kejuruan Negeri 2 Surabaya ini merupakan Sekolah Menengah Kejuruan (SMK) yang tertua di Jawa Timur &amp; Indonesia bagian timur, karena didirikan pada zaman penjajahan Belanda kurang lebih tahun 1917."
                        android:id="@+id/textView48"
                        android:textColor="#000"
                        android:singleLine="false"
                        android:layout_below="@+id/imageView15"
                        android:layout_alignLeft="@+id/imageView15"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Lulusan pertama Sekolah ini kurang lebih tahun 1921 dengan jurusan:"
                        android:id="@+id/textView137"
                        android:textColor="#000"
                        android:singleLine="false"
                        android:layout_below="@+id/imageView15"
                        android:layout_alignLeft="@+id/imageView15"
                        android:layout_marginTop="5dip"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="- Jurusan Bangunan Gedung"
                        android:id="@+id/textView145"
                        android:textColor="#3D3D3D"
                        android:singleLine="false"
                        android:layout_below="@+id/imageView15"
                        android:layout_alignLeft="@+id/imageView15"
                        android:layout_marginTop="5dip"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="- Jurusan Bangunan Air"
                        android:id="@+id/textView146"
                        android:textColor="#3D3D3D"
                        android:singleLine="false"
                        android:layout_below="@+id/imageView15"
                        android:layout_alignLeft="@+id/imageView15"
                        android:layout_marginTop="2dip"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Pertama-tama bernama KES (Koningen Emma School) pada zaman Belanda kira-kira sekitar tahun 1917-1942."
                        android:id="@+id/textView147"
                        android:textColor="#000"
                        android:singleLine="false"
                        android:layout_below="@+id/imageView15"
                        android:layout_alignLeft="@+id/imageView15"
                        android:layout_marginTop="5dip"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Pada zaman Penjajahan Jepang bernama KOGYO GHAKKO/KOGYO SENMON GHAKKO setingkat Sekolah Teknologi Menengah ( STM ). Setelah Indonesia Merdeka sampai datangnya Tentara Sekutu/NICA di Surabaya ini Sekolah ini tidak jelas bernama apa. Pada saat Belanda menguasai kembali tanah air kita Indonesia Sekolah ini bernama MTS ( Middlebare Technische School )."
                        android:id="@+id/textView148"
                        android:textColor="#000"
                        android:singleLine="false"
                        android:layout_below="@+id/imageView15"
                        android:layout_alignLeft="@+id/imageView15"
                        android:layout_marginTop="5dip"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Setelah pengakuan Kedaulatan,Sekolah ini bernama Sekolah Teknologi Menengah (STM 1 Surabaya ) dan sekarang berubah nama menjadi Sekolah Menengah Kejuruan ( SMK 2 Surabaya )."
                        android:id="@+id/textView149"
                        android:textColor="#000"
                        android:singleLine="false"
                        android:layout_below="@+id/imageView15"
                        android:layout_alignLeft="@+id/imageView15"
                        android:layout_marginTop="5dip"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Demikian sekelumit sejarah Sekolah ini yang terkait dengan perjuangan bangsa kita dalam perang kemerdekaan."
                        android:id="@+id/textView150"
                        android:textColor="#000"
                        android:singleLine="false"
                        android:layout_below="@+id/imageView15"
                        android:layout_alignLeft="@+id/imageView15"
                        android:layout_marginTop="5dip"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Source : smkn2sby.sch.id"
                        android:id="@+id/textView52"
                        android:layout_above="@+id/imageView18"
                        android:layout_alignLeft="@+id/imageView18"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Update : 10/02/2017"
                        android:id="@+id/textView49"
                        android:layout_above="@+id/imageView18"
                        android:layout_alignLeft="@+id/imageView18"
                        android:layout_marginBottom="2dip"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView19"
                        android:src="@drawable/line"
                        android:layout_above="@+id/textView48"
                        android:layout_alignLeft="@+id/imageView15"
                        />
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>